version: '3'
services:
    nginx:
      image: nginx:latest     
      container_name: site1_nginx
      depends_on:
        - php
        - mariadb
      restart: always
      ports:
          - "8080:80"
          - "8443:443"
      volumes:
          - ./docker/nginx/nginx.conf:/etc/nginx/conf.d/nginx.conf
          - ./public:/site1/public
      networks:
        - appnet              

    php:
      image: php:fpm
      build:
          context: .
          dockerfile: ./docker/php.Dockerfile
          args:
            UID: 1000
            GID: 1000
      container_name: site1_php
      depends_on:
        - mariadb
      working_dir: /site1/public
      volumes:
        - ./public:/site1/public
      networks:
        - appnet    

    mariadb:
      image: mariadb:latest
      container_name: site1_mariadb
      environment:
        MYSQL_ROOT_PASSWORD: 'root'
        MYSQL_USER: 'site1'
        MYSQL_PASSWORD: 'secret'
        MYSQL_DATABASE: 'site1'
      ports:
        - "3306:3306"
      volumes:
        - ./mariadb:/var/lib/mysql
      networks:
        - appnet  
      
volumes:
  mariadb: {}

networks:
  appnet:
    driver: bridge
